<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c235b">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/contMainAndAside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- Information section -->
        <LinearLayout
            android:id="@+id/continfofactura_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#7B96D4"
            android:padding="18dp"
            android:layout_marginHorizontal="20px"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/toggle_btn_close"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:background="#000"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text="Cerrar"
                    android:gravity="center"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/fichainventario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INVENTARIO"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/toggle_btn_create"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:background="#139e36"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text="Create"
                    android:gravity="center"
                    android:padding="5dp"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- Table section -->
        <LinearLayout
            android:id="@+id/contable_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#7B96D4"
            android:layout_marginHorizontal="20px">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:background="#7B96D4">

                <TableRow
                    android:background="#18AABB">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marca"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"/>
                </TableRow>

                <!-- Example rows based on provided JSON -->
                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desodorante"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rexona"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabón Líq."
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lifebuoy"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Champú Hdrt"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pantene"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Champu Anti C."
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patito"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabón Líquido"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neutro"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Champú Rp."
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garnier"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desodorante"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanex"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow
                    android:background="#EFEFEF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabón Barra"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aveeno"
                        android:padding="8dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:onClick="deleteProduct"
                        android:padding="5dp"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>